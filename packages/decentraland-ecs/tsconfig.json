{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "strict": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "stripInternal": true,
    "moduleResolution": "Node",
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "downlevelIteration": true,
    "keyofStringsOnly": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "types": ["@dcl/posix"],
    "typeRoots": ["./node_modules"]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "../../node_modules",
    "../../src",
    "../../test",
    "../test",
    "dist",
    "etc",
    "temp",
    "types",
    "api-docs-review/decentraland-ecs.api.ts"
  ]
}
